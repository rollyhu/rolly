pragma solidity ^0.8;

//题目描述：反转一个字符串。输入 "abcde"，输出 "edcba"

contract ReverseString{

    function rs(string calldata str) public pure returns ( string memory){
        bytes memory strByts =bytes(str);
        bytes memory goByts=new bytes(strByts.length);
        for (uint i=0; i<strByts.length; i++) 
        {
            goByts[strByts.length-i-1]=strByts[i];
        }
        return string(goByts);
    }

}
